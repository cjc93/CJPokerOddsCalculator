<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StatsNameLeft" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StatsNameRight" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StatsValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|right</item>
    </style>

    <style name="SelectCardButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/unknown_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SuitSelectorButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/unknown_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>
</resources>